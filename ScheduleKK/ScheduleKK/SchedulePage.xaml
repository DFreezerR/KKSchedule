        <Label x:Name="title" Text="Расписание" FontSize="20" TextColor="White" VerticalOptions="Center"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <RefreshView x:Name="refreshView">
            <ScrollView>
                <StackLayout x:Name="stack">
                    
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>